{
  "name": "sop-workflow",
  "version": "1.2.0",
  "description": "Complete SOP/SOW Workflow System - Project management with autonomous execution, code review, testing, deployment, hotfixes, refactoring, and Jira reporting",
  "author": {
    "name": "masmilon"
  },
  "license": "MIT",
  "keywords": [
    "sop",
    "sow",
    "workflow",
    "planning",
    "jira",
    "autonomous",
    "project-management",
    "task-tracking",
    "code-review",
    "testing",
    "deployment",
    "hotfix",
    "refactoring"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(rm:*)",
        "hooks": [
          {
            "type": "command",
            "command": "$PLUGIN_DIR/hooks/notify-delete.sh \"$TOOL_INPUT\""
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Edit",
      "Write",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(cp:*)"
    ]
  }
}
